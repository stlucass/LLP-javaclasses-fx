    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Cadastro de Copo">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label text="Material:" />
        <TextField fx:id="tfMaterial" promptText="Ex: Vidro, Plástico" />
        <Label text="Preenchimento:" />
        <TextField fx:id="tfPreenchimento" promptText="Ex: Água, Café" />
        <Label text="Capacidade (ml):" />
        <TextField fx:id="tfCapacidade" promptText="Ex: 350.5" />
        <Button mnemonicParsing="false" onAction="#onSalvarButtonClick" prefWidth="260.0" text="Salvar" />
    </children>
</VBox>